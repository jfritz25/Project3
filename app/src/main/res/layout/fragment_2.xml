<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <TextView
            android:id="@+id/whatIs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:lines="1"
            android:maxLines="2"
            android:text="What is..."
            android:textSize="50sp"
            android:textColor="@color/black"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:text="" />

            <TextView
                android:id="@+id/operatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:text="" />

            <TextView
                android:id="@+id/number2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:text="" />
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Message"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text=""
        android:layout_gravity="center"
        >

    </TextView>

        <EditText
            android:id="@+id/userAnswer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Your Answer..."
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="40sp"
            android:textAlignment="center"
            />




        <Button
            android:id="@+id/buttonDone"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"


            android:background="@color/start"
            android:text="DONE"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="0dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/math" />


    </LinearLayout>

        <!--  Getting the wording horizontally next to one-another  -->


    <!--   Closing Tags     -->


</FrameLayout>